<UserControl x:Class="WpfApp.Views.NewsViewB"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.Views"
             xmlns:viewModels="clr-namespace:WpfApp.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="500">

    <Grid>

        <Image HorizontalAlignment="Left" Height="203" Margin="28,10,0,0" VerticalAlignment="Top" Width="445" Source="{Binding ImgUrl}" Stretch="UniformToFill"/>
        <TextBlock HorizontalAlignment="Left" Margin="28,218,0,0" TextWrapping="Wrap" Text="{Binding Title}" VerticalAlignment="Top" Height="40" Width="445" FontWeight="Bold" FontFamily="Arial" FontSize="16" Foreground="White"/>
        <TextBlock HorizontalAlignment="Left" Margin="28,263,0,0" TextWrapping="Wrap" Text="{Binding Content}" VerticalAlignment="Top" RenderTransformOrigin="0.553,-1.281" Height="177" Width="445" Foreground="White" FontFamily="Arial" FontWeight="Bold"/>

    </Grid>
</UserControl>
